<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bsod.uniapp"
    android:versionCode="9"
    android:versionName="1.0001" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.bsod.tfg.vista.App"
        android:allowBackup="true"
        android:icon="@drawable/posibleicon"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.bsod.tfg.vista.ActivitySplash"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bsod.tfg.ActivityMain"
            android:label="@string/app_name" />
        <activity
            android:name="com.bsod.tfg.vista.ActivitySearchUni"
            android:label="@string/title_activity_activity_buscar_uni"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.bsod.tfg.vista.ActivityRegister"
            android:label="@string/activity_register_label"
            android:parentActivityName="com.bsod.tfg.vista.ActivitySplash" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bsod.tfg.vista.ActivitySplash" />
        </activity>
        <activity
            android:name="com.bsod.tfg.vista.ActivityLogin"
            android:label="@string/activity_login_label"
            android:parentActivityName="com.bsod.tfg.vista.ActivitySplash" >
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bsod.tfg.vista.ActivitySplash" />
        </activity>
        <activity
            android:name="com.bsod.tfg.vista.ActivitySettings"
            android:label="@string/activity_settings_name"
            android:parentActivityName="com.bsod.tfg.ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bsod.tfg.ActivityMain" />
        </activity>
        <activity
            android:name="com.bsod.tfg.vista.ActivitySolveExam"
            android:label="@string/activity_solve_exam_label"
            android:parentActivityName="com.bsod.tfg.ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bsod.tfg.ActivityMain" />
        </activity>
        <activity
            android:name="com.bsod.tfg.vista.ActivityMessageDetail"
            android:label="@string/activity_message_detail_label"
            android:parentActivityName="com.bsod.tfg.ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bsod.tfg.ActivityMain" />
        </activity>
    </application>

</manifest>