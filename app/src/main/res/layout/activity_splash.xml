<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/registrate"
            android:id="@+id/splash_registrate_button"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/splash_login_button"
            android:layout_alignStart="@+id/splash_login_button"
            android:layout_alignRight="@+id/splash_login_button"
            android:layout_alignEnd="@+id/splash_login_button"
            android:theme="@style/buttons_splash"
             />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/inicia_sesion"
            android:id="@+id/splash_login_button"
            android:theme="@style/buttons_splash"
            android:layout_marginTop="44dp"
            android:layout_below="@+id/splash_registrate_button"
            android:layout_centerHorizontal="true"
             />

    </RelativeLayout>

</LinearLayout>