<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_archivos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/archivos_boton_primero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/primero"
        android:theme="@style/buttons_splash" />

    <Button
        android:id="@+id/archivos_boton_segundo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/segundo"

        android:theme="@style/buttons_splash" />

    <Button
        android:id="@+id/archivos_boton_tercero"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tercero"
        android:theme="@style/buttons_splash" />

    <Button
        android:id="@+id/archivos_boton_cuarto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/cuarto"
        android:theme="@style/buttons_splash" />

    <Button
        android:id="@+id/archivos_subir_examen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload_exam"
        android:textAllCaps="true"
        android:theme="@style/buttons_splash" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:text="@string/your_favorite_subjects" />

    <ListView
        android:id="@+id/listview_fav_asignaturas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
